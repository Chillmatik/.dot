[alias]
  authors = shortlog -sne --no-merges
  amend = commit --amend
  br = branch
  ci = commit -v
  co = checkout
  d = diff
  fixup = !sh -c 'git commit --fixup $1 && \
                  git stash && \
                  git rebase -i $1~1 && \
                  git stash pop' -
  graph = log --oneline --graph --decorate
  hash = !sh -c 'git rev-parse ${1-`echo HEAD`}' -
  hr = reset --hard
  lg = log --oneline --graph --decorate
  p = add --patch
  patch = add --patch
  pl = pull
  plrb = pull --rebase
  refresh = !sh -c 'git stash && \
                    git fetch origin && \
                    git rebase origin/master && \
                    git stash pop' -
  sm = submodule
  smu = submodule update --init
  st = status -sb
  staged = diff --cached
  sync = !sh -c 'git fetch --all && git rebase ${1-`echo origin/master`}'
  unstage = !sh -c 'git reset HEAD $1'
  unstash = stash pop
[apply]
  whitespace = fix
[branch "master"]
  rebase = true
[color]
  ui = auto
[color "branch"]
  current = green reverse
  local = green
  remote = cyan
[color "diff"]
  commit = yellow bold
  frag = cyan
  meta = bold
  new = green bold
  untracked = bold
  whitespace = yellow reverse
[color "interactive"]
  error = red bold
  header = cyan
  help = yellow
  prompt = green bold
[color "status"]
  added = green
  changed = red
  untracked = bold
[core]
  autocrlf = input
  excludesfile = ~/.gitignore
[github]
  user = sds
[help]
  autocorrect = 10
[merge]
  log = 100
[pager]
  color = true
[push]
  default = current
[rebase]
  autosquash = true
[rerere]
  enabled = 1
[user]
  name = Shane da Silva
  email = shane@dasilva.io
