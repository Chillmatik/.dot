[alias]
  author  = !sh -c 'git config --get user.name && \
                    git config --get user.email'
  authors = shortlog -sne --no-merges
  amend   = "!f() { $DOTDIR/plugins/git/scripts/amend "$@"; }; f"
  br      = branch -v -v
  ci      = commit -v
  ctags   = "!f() { $DOTDIR/plugins/git/scripts/ctags "$@"; }; f"
  co      = checkout
  d       = diff
  fresh   = "!f() { $DOTDIR/plugins/git/scripts/fresh "$@"; }; f"
  hash    = !sh -c 'git rev-parse ${1-HEAD}' -
  hr      = reset --hard
  lg      = log --oneline --graph --decorate
  p       = add --patch
  pl      = pull
  rb      = rebase
  sm      = submodule
  smu     = submodule update --init
  st      = status -sb
  staged  = diff --cached
  track   = !sh -c 'git branch --set-upstream `git rev-parse --abbrev-ref HEAD` $1' -
  unstage = !sh -c 'git reset HEAD'
  unstash = stash pop
[apply]
  whitespace = fix
[branch]
  autosetupmerge  = always
  autosetuprebase = always
[color]
  ui = auto
[color "branch"]
  current      = green bold
  local        = bold
  plain        = normal
  remote       = cyan bold
[color "decorate"]
  branch       = white bold
  remoteBranch = cyan bold
  tag          = red
  stash        = magenta
  HEAD         = green
[color "diff"]
  commit       = yellow bold
  frag         = cyan
  func         = bold cyan
  meta         = bold
  new          = green bold
  plain        = normal
  old          = red bold
  untracked    = bold
  whitespace   = yellow reverse
[color "grep"]
  context      = normal
  filename     = green bold
  function     = cyan bold
  linenumber   = yellow bold
  match        = yellow reverse
  selected     = normal
  separator    = normal
[color "interactive"]
  error        = red bold
  header       = cyan
  help         = yellow bold
  prompt       = magenta bold
[color "status"]
  header       = cyan
  added        = green bold
  branch       = green bold
  changed      = red bold
  nobranch     = red bold
  untracked    = normal
[core]
  autocrlf     = input
  excludesfile = ~/.gitignore
[github]
  user = sds
[grep]
  extendedRegexp = true
  lineNumber     = true
[help]
  autocorrect = 10
[merge]
  log = 100
[pager]
  color = true
[push]
  default = current
[rebase]
  autosquash = true
  stat       = true
[rerere]
  enabled = 1
[user]
  name  = Shane da Silva
  email = shane@dasilva.io
