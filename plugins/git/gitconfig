[alias]
  author = !sh -c 'git config --get user.name && \
                   git config --get user.email'
  authors = shortlog -sne --no-merges
  amend = "!f() { $DOTDIR/plugins/git/scripts/amend "$@"; }; f"
  br = branch
  ci = commit -v
  ctags = "!f() { $DOTDIR/plugins/git/scripts/ctags "$@"; }; f"
  co = checkout
  d = diff
  fresh = "!f() { $DOTDIR/plugins/git/scripts/fresh "$@"; }; f"
  hash = !sh -c 'git rev-parse ${1-`echo HEAD`}' -
  hr = reset --hard
  lg = log --oneline --graph --decorate
  p = add --patch
  pl = pull
  rb = rebase
  sm = submodule
  smu = submodule update --init
  st = status -sb
  staged = diff --cached
  unstage = !sh -c 'git reset HEAD $1'
  unstash = stash pop
[apply]
  whitespace = fix
[branch]
  autosetupmerge = true
[branch "master"]
  rebase = true
[color]
  ui = auto
[color "branch"]
  current = green reverse
  local = green
  remote = cyan
[color "diff"]
  commit = yellow bold
  frag = cyan
  meta = bold
  new = green bold
  untracked = bold
  whitespace = yellow reverse
[color "interactive"]
  error = red bold
  header = cyan
  help = yellow
  prompt = green bold
[color "status"]
  added = green
  changed = red
  untracked = bold
[core]
  autocrlf = input
  excludesfile = ~/.gitignore
[github]
  user = sds
[help]
  autocorrect = 10
[merge]
  log = 100
[pager]
  color = true
[push]
  default = current
[rebase]
  autosquash = true
[rerere]
  enabled = 1
[user]
  name = Shane da Silva
  email = shane@dasilva.io
